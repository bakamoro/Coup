<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".joinSpecificOrRandomGame"
    android:orientation="vertical"
    android:background="@color/black"
    android:backgroundTint="#000000"
    android:weightSum="12"
    >

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        />
    <Button
        android:id="@+id/JoinSpecificGameButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="#000000"
        android:text="join specific game"
        android:textColor="#178A1E"
        android:onClick="joinSpecificGame"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        />
    <Button
        android:id="@+id/JoinRandomGameButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="#000000"
        android:text="join random game"
        android:textColor="#178A1E"
        android:onClick="JoinRandomGame"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        />
    <Button
        android:id="@+id/ChooseGameButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="#000000"
        android:text="choose a game"
        android:textColor="#178A1E"
        android:onClick="ChooseGame"/>

</LinearLayout>